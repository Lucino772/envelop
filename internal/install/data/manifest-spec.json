{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "sources": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "#/definitions/http_source"
                    },
                    {
                        "$ref": "#/definitions/base64_source"
                    },
                    {
                        "$ref": "#/definitions/steam_source"
                    }
                ],
                "properties": {
                    "type": {
                        "enum": [
                            "http",
                            "base64",
                            "steam"
                        ]
                    },
                    "destination": {
                        "type": "string"
                    },
                    "exports": {
                        "$ref": "#/definitions/exports"
                    }
                },
                "required": [
                    "type"
                ]
            }
        },
        "config": {
            "type": "string"
        }
    },
    "required": [
        "sources"
    ],
    "definitions": {
        "http_source": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "hash": {
                    "type": "string"
                },
                "archive": {
                    "type": "string"
                }
