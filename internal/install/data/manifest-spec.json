            ]
        },
        "base64_source": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                }
            },
            "required": [
                "content"
            ]
        },
        "steam_source": {
            "type": "object",
            "properties": {
                "appId": {
                    "type": "integer"
                }
            },
            "required": [
                "appId"
            ]
        },
        "exports": {
            "type": "object",
            "additionalProperties": {
                "type": [
                    "string",
                    "boolean",
                    "integer",
                    "number"
                ]
            }
        }
    }
}