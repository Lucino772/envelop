{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "process": {
            "type": "object",
            "properties": {
                "command": { "type": "string" },
                "env": { 
                    "type": "object",
                    "additionalProperties": {
                        "type": ["string", "number", "boolean"]
                    }
                },
                "graceful": {
                    "type": "object",
                    "properties": {
                        "type": { "type": "string" },
                        "timeout": { "type": "integer" },
                        "options": { "type": "object" }
                    },
                    "required": ["type"]
                }
            },
            "required": ["command", "graceful"]
        },
        "hooks": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/hook_config"
            }
        },
        "logging": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/log_config"
            }
        },
        "modules": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/module_config"
            }
        }
    },
    "required": ["process", "modules"],
    "definitions": {
        "module_config": {
            "type": "object",
            "properties": {
                "uses": { "type": "string" },
                "with": {
                    "type": "object",
                    "default": {}
                }
            },
            "required": ["uses"]
        },
        "hook_config": {
            "type": "object",
            "properties": {
                "type": {  "type": "string" },
                "options": {
                    "type": "object",
                    "default": {}
                }
            },
            "required": ["type"]
        },
        "log_config": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "options": {
                    "type": "object",
                    "default": {}
                }
            },
            "required": ["type"]
        }
    }
}